{% extends 'layout.twig' %}

{% block title %}All pizza {% endblock %}


{% block body %}

    <div class="container">
        <div class="row text-center">
            {% if errors is not null and errors is not empty %}

                {{ errors }}

            {% endif %}

        </div>
    </div>

    <div class="row">

        <div class="col-xs-6">

        <table style="margin-top: 100px;" class="table table-striped text-center">

            <tr>
                <th class="text-center">Name</th>

            </tr>


            {% for item in pizza %}
                <tr>
                    <td>{{ item.pizza_name | capitalize }}</td>
                </tr>
            {% endfor %}

        </table>

            </div>


        <div class="col-xs-6">

            <table style="margin-top: 100px;" class="table table-striped text-center">

                <tr>
                    <th class="text-center">Calories</th>
                </tr>
                {% if calories is defined %}

                    {% for item in calories %}
                        <tr>
                            <td>{{ item }}</td>
                        </tr>
                    {% endfor %}

                {% endif %}
            </table>

        </div>

    </div>
{% endblock %}